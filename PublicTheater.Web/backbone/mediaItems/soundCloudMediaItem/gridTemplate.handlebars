<div data-id="{{mediaId}}" class="mediaItem {{mediaType}}">
	{{#if hasTopSection}}
		<div class="topSection">
			{{#if hasImage}}
				<img src="{{imageURL}}" alt="{{title}}" class="mediaItemImage"></img>
      {{/if}}
      <iframe class="soundCloudiframe" data-id="{{mediaId}}" id="media{{mediaId}}" width="100%" height="166" scrolling="no" frameborder="no" src="https://w.soundcloud.com/player/?url={{mediaURL}}&amp;color=ff6600&amp;auto_play=false&amp;show_artwork=true"></iframe>			
		</div>
	{{/if}}
	<div class="bottomSection">
		<span class="mediaTitle">{{title}}</span>
		<span class="mediaSubTitle">{{subtitle}}</span>
	</div>
</div>